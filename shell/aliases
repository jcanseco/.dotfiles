#!/usr/bin/env bash

alias vdot="vim ~/.dotfiles"
alias vin="vim -Nu NONE" # Launch vim in no-compatible mode, but with no vimrc
alias rt='cd "$(git rev-parse --show-toplevel)" && echo "$_"' # Go to git root directory
alias open="xdg-open"
alias tgz="tar -xvzf"
alias myip="dig -4 TXT +short o-o.myaddr.l.google.com @ns1.google.com" # Get public IPv4 address (see https://unix.stackexchange.com/a/477715)

alias cl="clear"
alias q="exit"
alias qq="exit"

alias cla="all 'clear'"
alias qa="all 'exit'"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias -- -="cd -" # Go back to previous directory using -

alias dot="cd ~/.dotfiles"
alias ws="cd ~/Workspace"
alias ql="cd ~/Quicklinks"
alias doc="cd ~/Documents"
alias down="cd ~/Downloads"

alias sudo="sudo -E" # Preserve existing environment variables
alias cp="cp -i" # Ask if about to overwrite existing file
alias mv="mv -i" # Same as above
alias mkdir="mkdir -p" # Automatically create intermediate directories if needed
alias ls="ls --color=auto --group-directories-first"
alias tree="tree --dirsfirst"
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

alias cd..="cd .."
alias gti="git"
alias igt="git"
alias gt="git"
alias got="git"
alias giut="git"
alias gitu="git"
alias giit="git"
alias gi="git"
alias it="git"
